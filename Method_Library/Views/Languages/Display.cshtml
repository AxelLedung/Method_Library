@model Method_Library.Models.Languages

@{
    ViewData["Title"] = Model.Name;
    
}


<div>
    <span>@Model.Name/</span>
    <h3>Categories</h3>
    <div style="position: relative;">
        <a asp-controller="Categories" asp-action="Create" asp-route-languageId="@Model.Id">Create new Category</a>
        <a style="position: absolute; top: 10px; right: 10px;" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
    <hr />
    <div>
@foreach (var category in Model.Categories) {
    <a asp-controller="Categories" asp-action="Display" asp-route-id="@category.Id">
        <div style="padding:10px; border: 1px #CCCCCC solid; margin: 5px 0px; box-shadow: 1px 1px #CCCCCC">
            <h4>@category.Name</h4>
        </div>
    </a>
}
    </div>
</div>