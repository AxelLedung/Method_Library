@model Method_Library.Models.Languages

@{
    ViewData["Title"] = Model.Name;
    
}


<div>
    <span><a asp-controller="Languages" asp-action="Display">@Model.Name</a>/</span>
    <h3>Categories</h3>
    <a asp-controller="Categories" asp-action="Create">Create new</a>
    <hr />
    <div>
@foreach (var category in Model.Categories) {
            <p><a asp-controller="Categories" asp-action="Display" asp-route-id="@category.Id">@category.Name</a></p>
}
    </div>
</div>