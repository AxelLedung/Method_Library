@model IEnumerable<Method_Library.Models.Snippets>

@{
    ViewData["Title"] = "Snippets";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Language</th>
            <th>Category</th>
            <th>Manage</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Display" asp-route-id="@item.Id">
                    @item.Name
                </a>
            </td>
            <td>
                <a asp-controller="Languages" asp-action="Display" asp-route-id="@item.Categories.LanguageId">@item.Categories.Languages.Name</a>
            </td>
            <td>
                <a asp-controller="Categories" asp-action="Display" asp-route-id="@item.CategoryId">@item.Categories.Name</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
